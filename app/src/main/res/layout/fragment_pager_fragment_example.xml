<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udb.sv.Sensores.Fragments.PagerFragmentExample">


    <TextView
        android:id="@+id/parentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp" />

    <TextView
        android:id="@+id/childLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentLabel"
        android:layout_centerHorizontal="true"
        android:padding="16dp" />

    <TextView
        android:id="@+id/fragmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/childLabel"
        android:layout_centerHorizontal="true"
        android:text="Hello from fragment!" />
</RelativeLayout>
