<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udb.sv.Sensores">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AcelerometroActivity"
            android:label="@string/title_activity_acelerometro"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.magnetrometroActivity" />
        <activity android:name=".Activities.gpsActivity" />
        <activity android:name=".Activities.barometroActivity" />
        <activity android:name=".Activities.giroscopioActivity" />
        <activity
            android:name=".Activities.luxumetroActivity"
            android:label="@string/title_activity_luxumetro"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.proximidadActivity"></activity>
    </application>

</manifest>